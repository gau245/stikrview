<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/idRlControls"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="VideoTitle"
        android:textColor="@color/white"
        android:textAlignment="center"
        android:padding="10dp"
        android:layout_margin="10dp"
        android:id="@+id/texttital"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_centerInParent="true">

        <ImageButton
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            app:tint="@color/white"
            android:id="@+id/idIBback"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:src="@drawable/ic_rb"/>

        <ImageButton
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:layout_weight="1"
            app:tint="@color/white"
            android:id="@+id/idIBplay"
            android:background="@android:color/transparent"
            android:src="@drawable/ic_play"/>
        <ImageButton
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:id="@+id/idIBforward"
            app:tint="@color/white"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:src="@drawable/ic_ff"/>



    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:padding="4dp"
        android:layout_margin="1dp"
        android:layout_alignParentBottom="true">

        <SeekBar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:id="@+id/seekbar"
            android:progressBackgroundTint="@color/white"
            android:progressTint="@color/yellow"
            android:thumb="@drawable/seekbra"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:text="time"
            android:textColor="@color/white"
            android:textSize="17sp"
            android:id="@+id/texttime"/>
    </LinearLayout>


</RelativeLayout>